<Window x:Class="CheckInSystem.NoReservationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheckInSystem"
        mc:Ignorable="d"
        Title="NoReservationWindow" Height="1620" Width="2160">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="4*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="4*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Viewbox Stretch="Uniform"   Grid.Row="0" Grid.Column="1">
            <Label>Please state your reason to be here</Label>
        </Viewbox>

        <Button Grid.Column="1" Grid.Row="2">
            <Viewbox Stretch="Uniform">
                <Label>I wish to talk to an associate</Label>
            </Viewbox>
        </Button>

        <Button Grid.Column="1" Grid.Row="4">
            <Viewbox Stretch="Uniform">
                <Label>I am here for the free Coffee</Label>
            </Viewbox>
        </Button>

    </Grid>
</Window>
